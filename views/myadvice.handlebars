<div class="container">

    <div class='jumbotron'>
        <h1>我的留言</h1>
        <h5>睇返自己比過咩建議比其他人</h5>
    </div>

    <div id="minheight">

        <div class="row text-center">
            {{#each advices}}
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    {{!-- {{#if victim}}
                    <p style="font-size:15px">匿名被害者(victim)</p>{{else}}
                    <p style="font-size:15px">匿名犯匪者(criminal)</p>{{/if}} --}}
                    <div class="caption">
                        <p style="font-size:10px">PostID : {{ post_id }}</p>
                        <p style="font-size:10px">{{ created_at }}</p>

                    </div>
                    <div class="caption">
                        <p>{{ content }}</p>
                    </div>
                    <a class="btn btn-info btn-sm btn-block" href="/posts/{{post_id}}">詳細內容</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>