<div class="container">

    <div class='jumbotron'>
        <h1>我的帖子</h1>
        <h5>睇返自己建立過咩post</h5>
    </div>

    <div id="minheight">

        <div class="row text-center">
            {{#each posts}}
            <div class="col-md-3 col-sm-6">
                <div class="img-thumbnail">
                    {{#if victim}}
                    <p style="font-size:15px">匿名被害者(victim)</p>{{else}}
                    <p style="font-size:15px">匿名犯匪者(criminal)</p>{{/if}}
                    <div class="caption">
                        <p style="font-size:10px">{{ created_at }}</p>
                    </div>
                    <div class="caption">
                        <h4>{{ title }}</h4>
                    </div>
                    {{#if image_path}}
                    <img src="{{ image_path }}" class="img-thumbnail"> {{/if}}
                    <div class="caption">
                        <p>{{ content }}</p>
                    </div>
                    <p>[no. of advices]</p>
                     <a class="btn btn-secondary btn-large btn-block" href="/posts/{{id}}">詳細內容</a>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
















</div>