<div class='jumbotron detailBanner overlay' style="border-radius: 0px;height: 250px;display: flex;flex-direction: column;justify-content: center;">
</div>

<div class="container">
    <h1 style="margin-left: 14px;">我的帖子</h1>
    <br/>


    <div class="container">

        <div id="minheight">

            <div class="row text-center">
                {{#each posts}}
                <div class="col-md-3 col-sm-6" style="margin: 1px 0 1em;">

                    <div class="img-thumbnail">

                        <div class="caption ">
                            <p style="font-size:12px ">{{ created_at }}</p>
                        </div>
                        </br>
                        {{#if victim}}
                        <a class="avatar">
                            <img src="/assets/4.png" width="40px" height="40px">
                        </a>
                        <p style="font-size:14px;margin: 11px 0 1em;">PostID:{{id}} 匿名被害者</p>{{else}}
                        <a class="avatar">
                            <img src="/assets/3.png" width="40px" height="40px">
                        </a>
                        <p style="font-size:14px;margin: 11px 0 1em;">PostID:{{id}} 匿名犯匪者</p>{{/if}}

                        <div class="caption ">
                            <h5>{{ title }}</h5>
                        </div>
                        {{#if image_path}}
                        <img src="{{ image_path }} " class="img-thumbnail " style="border:0cm"> {{/if}}
                        <div class="caption ">
                            <p>{{ content }}</p>
                        </div>

                        {{#if victim}}
                        <a class="btn btn-primary btn-sm btn-block " style="background-color:#FBD302; border:0cm;" href="/posts/{{id}} ">詳細內容</a>{{else}}
                        <a class="btn btn-primary btn-sm btn-block " href="/posts/{{id}} ">詳細內容</a>{{/if}}
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
















</div>