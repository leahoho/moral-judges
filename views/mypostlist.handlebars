<div class="container">

    <div class='jumbotron'>
        <h1>我的帖子 (List of posts that i created)</h1>
        <p>See the posts you created !!</p>
    </div>


    <div class="row text-center">
        {{#each posts}}
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                {{#if victim}}
                <p style="font-size:15px">匿名被害者(victim)</p>{{else}}
                <p style="font-size:15px">匿名犯匪者(criminal)</p>{{/if}}
                <div class="caption">
                    <p style="font-size:10px">{{ created_at }}</p>
                </div>
                <div class="caption">
                    <h4>{{ title }}</h4>
                </div>
                {{#if image_path}}
                <img src="{{ image_path }}" class="img-thumbnail"> {{/if}}
                <div class="caption">
                    <p>{{ content }}</p>
                </div>
                <p>[no.of support]</p>
                <p>[no. of disupport]</p>
                <p>[no. of advices]</p>
                <button>
                    <a href="/posts/{{id}}">Details</a>
                </button>
            </div>
        </div>
        {{/each}}


    </div>
















</div>