<div class="container">


    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <button class="btn btn-outline-secondary" type="button">Search</button>
        </div>
        <input type="text" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1">
    </div>
    <button class="btn btn-primary btn-large">由新到舊</button>
    <button class="btn btn-primary btn-large">由舊到新</button>
    <button class="btn btn-primary btn-large">被害者先</button>
    <button class="btn btn-primary btn-large">受害者先</button>
    <button class="btn btn-primary btn-large">熱門先（用advice的數量恆量)</button>
    <button class="btn btn-primary btn-large">冷門先（用advice的數量恆量)</button>

    <div class='jumbotron'>
        <h1>Post home page (List of posts)</h1>
        <p>See the posts !!</p>
        <p>
            <a class="btn btn-primary btn-large" href="/role">Add new Posts</a>
        </p>
    </div>


    <div class="row text-center">
        {{#each posts}}
        <div class="col-md-3 col-sm-6">
            <div class="img-thumbnail">
                {{#if victim}}
                <p style="font-size:15px">匿名被害者(victim)</p>{{else}}
                <p style="font-size:15px">匿名犯匪者(criminal)</p>{{/if}}
                <div class="caption">
                    <p style="font-size:10px">{{ created_at }}</p>
                </div>
                <div class="caption">
                    <h4>{{ title }}</h4>
                </div>
                {{#if image_path}}
                <img src="{{ image_path }}" class="img-thumbnail"> {{/if}}
                <div class="caption">
                    <p>{{ content }}</p>
                </div>
                <p>[no.of support]</p>
                <p>[no. of disupport]</p>
                <p>[no. of advices]</p>
                <button>
                    <a href="/posts/{{id}}">Details</a>
                </button>
            </div>
        </div>
        {{/each}}


    </div>
</div>